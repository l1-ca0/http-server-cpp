# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.cpp text
*.hpp text
*.h text
*.cc text
*.c text
*.cmake text
*.txt text
*.md text
*.yml text
*.yaml text
*.json text
*.sh text eol=lf
*.conf text

# Declare files that will always have CRLF line endings on checkout.
*.bat text eol=crlf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.ez binary
*.bz2 binary
*.swp binary
*.jar binary

# Archive files
*.7z binary
*.jar binary
*.rar binary
*.tar binary
*.zip binary
*.gz binary
*.tgz binary
*.bz2 binary

# Executables
*.exe binary
*.com binary
*.bin binary
*.dll binary
*.so binary
*.dylib binary
*.a binary
*.lib binary
*.out binary

# IDE and editor files
*.pbxproj merge=union

# Export ignore for release archives
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
docker/ export-ignore
test/ export-ignore
build/ export-ignore
scripts/benchmark.sh export-ignore 